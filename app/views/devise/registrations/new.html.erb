<style type="text/css">
  label,em{
    color: white;
  }
</style>
<body style="background-image: url(/assets/shopping.jpg);">
  <div style="width: 30%;float:right;margin-right: 130px;background: #222; border: 1px solid;margin-top: 75px;">
    <div style="width: 100%;border-radius:0 5px 0  0; background: #E86464;margin: 0"><p style="padding: 5px;font-size: 35px;text-align: center;"><b>Sign Up</b></p>
    </div>
    <div style="margin: 40px 40px 40px 40px;">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :first_name,style:"font-size:22px;" %><br />
          <%= f.text_field :first_name, autofocus: true, class:'form-control' %>
        </div>

        <div class="field">
          <%= f.label :last_name,style:"font-size:22px;" %><br />
          <%= f.text_field :last_name , class:'form-control'%>
        </div>

        <div class="field">
          <%= f.label :email,style:"font-size:22px;" %><br />
          <%= f.email_field :email, class:'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password ,style:"font-size:22px;"%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation ,style:"font-size:25px;"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" , class:'form-control'%>
        </div></br>

        <div class="actions">
          <%= f.submit("Sign up",class: 'btn btn-primary') %>
        </div></br>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>