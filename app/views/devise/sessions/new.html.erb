<style type="text/css">
  label{
    color: white;
  }
</style>
<body style="background-image: url(/assets/shopping.jpg);">
  <div style="text-align: center;width: 20%;background: #222;float:right;margin-right:200px;border-radius: 5px ;border:1px solid; margin-top: 180px;">
    <div style="width: 100%;border-radius:0 5px 0  0; background: #E86464;margin: 0"><p style="padding: 5px;font-size: 35px;"><b>Log in</b></p>
    </div>
    <div style="margin: 20px 20px 20px 20px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :email ,style:"font-size:25px;"%><br />
          <%= f.email_field :email, autofocus: true, class:'form-control' %>
        </div></br>

        <div class="field">
          <%= f.label :password ,style:"font-size:25px;" %><br />
          <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="field">
          <%= image_tag("facebook_logo_small.png", size: "20x20") %>
          <%= link_to 'Login With Facebook' , '/auth/facebook'%>
        </div></br>

        <div class="actions" style="margin-bottom: 8px;">
          <%= f.submit("Log in",class:'btn btn-primary',style:"width:100%;") %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</body>